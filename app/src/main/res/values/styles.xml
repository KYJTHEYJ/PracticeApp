    </style>

    <style name="text_small">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="text_small_white_bold" parent="@style/text_small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_large_white" parent="@style/text_large">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="text_large_white_bold" parent="@style/text_large_white">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_large_black" parent="@style/text_large">
        <item name="android:textColor">@color/basic_text</item>
    </style>

    <style name="text_medium_black" parent="@style/text_medium">
        <item name="android:textColor">@color/basic_text</item>
