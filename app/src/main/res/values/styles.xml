        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_small_black" parent="@style/text_small">
        <item name="android:textColor">@color/basic_text</item>
    </style>

    <style name="text_page_title">
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@color/page_title</item>
    </style>

    <style name="btn_jbr_menu" parent="@style/text_medium_black">
