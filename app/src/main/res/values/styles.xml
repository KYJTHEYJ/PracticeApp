        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="pref_category" parent="@style/text_medium_black_bold">
        <item name="android:background">@color/background_pref_category</item>
    </style>

    <style name="Widget.MaterialComponents.Button.CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_padding_right</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>

    <style name="Widget.MaterialComponents.Button.CustomOutlinedCommandButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">3dp</item>
        <item name="iconSize">17dp</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>
